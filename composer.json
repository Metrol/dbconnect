{
    "name"       : "metrol/dbconnect",
    "description": "A PHP Database connection library for PDO",
    "type"       : "library",
    "license"    : "MIT License",
    "homepage"   : "https://github.com/Metrol/DBConnect",
    "version"    : "0.1.0",

    "require" : {
        "php"    : "8.0.*",
        "ext-pdo": "*",
        "ext-dom": "*"
    },

    "require-dev": {
        "phpunit/phpunit"    : "^8.5",
        "symfony/var-dumper" : "5.*"
    },

    "autoload": {
        "psr-4": {
            "Metrol\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Metrol\\Tests\\": "tests/"
        }
    }
}
